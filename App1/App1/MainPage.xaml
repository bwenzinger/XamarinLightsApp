<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App1.MainPage">

    <StackLayout>
        <ActivityIndicator IsVisible="{Binding IsLoadingLightStatus}" Color="Black" IsRunning="{Binding IsLoadingLightStatus}" />
        <Button IsVisible="{Binding LightStatusOff}" Text="Turn On" Clicked="OnOnClick" />
        <Button IsVisible="{Binding LightStatusOn}" Text="Turn Off" Clicked="OnOffClick" />
    </StackLayout>

</ContentPage>
